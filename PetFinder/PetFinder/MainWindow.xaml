        <Image x:Name="randomPetTwoImage" HorizontalAlignment="Left" Height="86" Margin="128,145,0,0" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="randomPetTwoButton" Content="Name 2" HorizontalAlignment="Left" Margin="128,236,0,0" VerticalAlignment="Top" Width="84" Click="randomPetTwoButton_Click"/>

        <Image x:Name="randomPetThreeImage" HorizontalAlignment="Left" Height="86" Margin="338,10,0,0" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="randomPetThreeButton" Content="Name 3" HorizontalAlignment="Left" Margin="338,101,0,0" VerticalAlignment="Top" Width="84" Click="randomPetThreeButton_Click"/>

        <Image x:Name="randomPetFourImage" HorizontalAlignment="Left" Height="86" Margin="338,145,0,0" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="randomPetFourButton" Content="Name 4" HorizontalAlignment="Left" Margin="338,236,0,0" VerticalAlignment="Top" Width="84" Click="randomPetFourButton_Click"/>




    </Grid>
</Window>