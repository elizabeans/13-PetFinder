        <Button x:Name="randomPetsButton" Content="Click For Pets" HorizontalAlignment="Left" Margin="170,274,0,0" VerticalAlignment="Top" Width="210" Click="randomPetsButton_Click" Height="35"/>

        <Image x:Name="randomPetOneImage" HorizontalAlignment="Left" Height="86" Margin="128,10,0,0" VerticalAlignment="Top" Width="84"/>
